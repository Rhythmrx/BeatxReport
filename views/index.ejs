<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>PDF Upload</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="form-container">
    <h2>Upload PDF & Add Details</h2>

    <form id="uploadForm" action="/upload" method="post" enctype="multipart/form-data">


      <label>Upload PDF File:</label>
      <input type="file" name="pdf" accept="application/pdf" required>


      <label>Choose Input Option:</label>
      <select id="inputSelector" name="inputType">
        <option value="">-- Select Option --</option>
        <option value="logo">Upload Hospital Logo</option>
        <option value="name">Enter Hospital Name</option>
      </select>

      <div id="logoInput" class="hidden">
        <label>Hospital Logo:</label>
        <input type="file" name="hospitalLogo" accept="image/*">
      </div>

      <label>Hospital Name:</label>
      <input type="text" name="HospitalName" placeholder="Enter hospital name">

      <label>Referral Doctor:</label>
      <input type="text" name="refDoctor" placeholder="Enter referral doctor">

      <label>Serial Number (S/N):</label>
      <input type="text" name="serialNo" placeholder="Enter serial number">


      <label>Name:</label>
      <input type="text" name="textName" placeholder="Enter doctor's name">

      <label>Doctor Education:</label>
      <input type="text" name="education" placeholder="Enter doctorâ€™s education">

      <button type="submit">Upload & Process PDF</button>
    </form>
  </div>

  <script>
    const selector = document.getElementById("inputSelector");
    const logoInput = document.getElementById("logoInput");

    selector.addEventListener("change", function () {
      logoInput.classList.add("hidden");

      if (this.value === "logo") {
        logoInput.classList.remove("hidden");
      }
    });
  </script>

</body>
</html>
